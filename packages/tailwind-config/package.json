{
  "name": "@onesaz/tailwind-config",
  "version": "0.3.0",
  "description": "Tailwind CSS preset for Onesaz UI - shared configuration with design tokens (supports v3 and v4)",
  "type": "module",
  "license": "MIT",
  "author": "Onesaz <engineering@onesaz.com>",
  "homepage": "https://github.com/onesaz/onesaz-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onesaz/onesaz-ui.git",
    "directory": "packages/tailwind-config"
  },
  "bugs": {
    "url": "https://github.com/onesaz/onesaz-ui/issues"
  },
  "keywords": [
    "tailwindcss",
    "tailwind-preset",
    "design-system",
    "tailwindcss-v4",
    "onesaz"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./v4": "./dist/v4.css",
    "./v4.css": "./dist/v4.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@onesaz/tokens": "*"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.15",
    "tsup": "^8.3.5",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.0 || ^4.0.0"
  }
}
